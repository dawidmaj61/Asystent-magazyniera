<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".glowne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="PrzyjÄ™cie towaru"
            android:textSize="24sp" />

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Wydanie towaru"
            android:textSize="24sp" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/pal1" />

        <ImageButton
            android:id="@+id/imageBtn2"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/pal2" />

        <ImageButton
            android:id="@+id/imageBtn3"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/pal3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>